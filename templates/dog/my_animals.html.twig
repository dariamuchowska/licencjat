{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.my_dog_list'|trans }}
{% endblock %}

{% block body %}
    <h1 class="display-3">{{ 'title.my_dog_list'|trans }}</h1>
    {%  if pagination is defined and pagination.items|length %}

        <div class="d-flex justify-content-center">
            {% for dog in pagination.items %}
                <div class="card text center">
                    <figure><img class="card-img-top img-fluid" id="dog-card-img"
                                 src="{{ asset(photos_directory~dog.photoFilename) }}" alt="{{ dog.name }}"></figure>
                    <div class="card-body" id="dog-card-body">
                        <a href="{{ url('dog_show', {id: dog.id}) }}" title="{{ 'action.view'|trans }}" id="view-btn" style="text-decoration: none"><h5 class="card-title" id="dog-card-title">{{ dog.name }}</h5></a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="d-flex justify-content-center" id="show">
            <div class="row col-10 text-center">
                <div class="row">
                    <h3 class="h3 font-weigh-normal">
                        {{ 'message.empty_my_dog_list'|trans }}
                    </h3>
                </div>
                <div class="row">
                    <h4 class="h4 font-weigh-normal">
                        <a role="button" class="btn btn-secondary btn-lg" href="{{ url('dog_create') }}" title="{{ 'message.add'|trans }}">{{ 'message.add'|trans }}</a>
                    </h4>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}