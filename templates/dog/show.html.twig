{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.dog_details'|trans({'%id%': dog.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.dog_details'|trans({'%id%': dog.id|default('')}) }}</h1>
    {% if dog is defined and dog|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.name'|trans }}</dt>
            <dd>{{ dog.name }}</dd>
            <dt>{{ 'label.breed'|trans }}</dt>
            <dd>{{  dog.breed.name }}</dd>
            <dt>{{ 'label.age'|trans }}</dt>
            <dd>{{ dog.age }}</dd>
            <dt>{{ 'label.description'|trans }}</dt>
            <dd>{{  dog.description }}</dd>
        </dl>
        <p>
            <a href="{{ url('dog_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}