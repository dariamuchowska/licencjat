{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.dog_details'|trans }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center" id="show">
        <div class="row col-10">
            <h1 class="h1 font font-weigh-normal">{{ dog.name }}</h1>
            {% if dog is defined and dog|length %}
            <div class="row">
                <div class="col">
                    <div class="data">
                        <div class="horizontal">
                            <dt>{{ 'label.breed'|trans }}</dt>
                            <dd>{{ dog.breed.name }}</dd>
                            <dt>{{ 'label.age'|trans }}</dt>
                            <dd>{{ dog.age }}</dd>
                            <dt>{{ 'label.gender'|trans }}</dt>
                            <dd>{{ dog.gender }}</dd>
                            <dt>{{ 'label.size'|trans }}</dt>
                            <dd>{{ dog.size }}</dd>
                            <dt>{{ 'label.description'|trans }}</dt>
                            <dd>{{  dog.description }}</dd>
                            <dt>{{ 'label.owner'|trans }}</dt>
                            <dd>{{ dog.author }}</dd>
                        </div>
                    </div>
                </div>
                <div class="col d-flex justify-content-end">
                    {% if dog.photoFilename is defined and dog.photoFilename|length %}
                        <figure>
                            <img class="img-fluid" id="dog-show-img" src="{{ asset(photos_directory~dog.photoFilename) }}" alt="{{ dog.name }}">
                        </figure>
                    {% endif %}
                </div>
            </div>
            <div class="roow" id="dog-index-btn">
                <a role="button" id="view-btn" class="btn btn-info btn-sm" href="{{ url('dog_index') }}" title="{{ 'action.view_more'|trans }}">{{ 'action.view_more'|trans }}</a>
            </div><br><br>
            {% if is_granted('EDIT', dog) %}
                <div class="roow" id="dog-index-btn">
                    <a role="button" id="view-btn" class="btn btn-info btn-sm" href="{{ url('dog_edit', {id: dog.id}) }}" title="{{ 'action.edit'|trans }}">{{ 'action.edit'|trans }}</a>
                </div>
            {% endif %}<br><br>
            {% if is_granted('DELETE', dog) %}
                <div class="roow" id="dog-index-btn">
                    <a role="button" id="view-btn" class="btn btn-info btn-sm" href="{{ url('dog_delete', {id: dog.id}) }}" title="{{ 'action.delete'|trans }}">{{ 'action.delete'|trans }}</a>
                </div>
            {% endif %}

        </div>
        {% else %}
            <p>
                {{ 'message.record_not_found'|trans }}
            </p>
        {% endif %}
    </div>
{% endblock %}