{% extends 'base.html.twig' %}

{% block title %}{{ 'action.login'|trans }}{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center" id="form">
        <form method="post" class="col-4">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    {{ 'label.logged'|trans }} {{ app.user.userIdentifier }}, <a
                            href="{{ path('app_logout') }}">{{ 'action.logout'|trans }}</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">{{ 'label.welcome'|trans }}</h1>
            <!-- Email input -->
            <div class="form-outline mb-4">
                <label for="inputEmail">{{ 'label.email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
            </div>
            <!-- Password input -->
            <div class="form-outline mb-4">
                <label for="inputPassword">{{ 'label.password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <!-- Submit button -->
            <button class="btn btn-primary btn-block mb-4" type="submit">
                {{ 'action.login'|trans }}
            </button>
        </form>
    </div>
    <div class="container d-flex justify-content-center">
        <div class="col-4" id="reglog">
            {{ 'label.dontHave'|trans }}
            <a href="{{ url('app_register') }}" title="{{ 'action.register'|trans }}">{{ 'action.register'|trans }}</a>
        </div>
    </div>
{% endblock %}